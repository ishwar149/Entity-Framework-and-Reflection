@model BusinessObjects.Product

    <div class="single-products">
        <div class="productinfo text-center">
            <img style="width:250px;height:225px;" src='@Url.Content(Model.MainImageURL)' alt="" />
            <h2>@Model.Price</h2>
            <p>@Model.Name</p>
            <a href="#abc" onclick="AddtoCartClick(@Model.ID)" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
            <a href="#abc" onclick="ItemDetails(@Model.ID)" class="btn btn-default add-to-cart"><i class="fa"></i>Details</a>
            <input id="quantity" value="1" type="hidden" />
        </div>

    </div>
